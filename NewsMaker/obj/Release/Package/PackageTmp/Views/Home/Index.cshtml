@model List<NewsMaker.Models.Post>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Layouts/Main_Layout.cshtml";
}


<div class="container">
    <div class="page-header">
        <h1 id="timeline">Նորություններ</h1>
    </div>
    <ul class="timeline">
        @{
            bool invert = true;
        }

        @foreach (var m in @Model)
        {
            invert=!invert;
            <li class="@(invert ? "timeline-inverted" : "")">

                <div class="timeline-badge"><i class="glyphicon glyphicon-check"></i></div>
                <div class="timeline-panel">
                    <div class="timeline-heading">
                        <h4 class="timeline-title">@m.Title</h4>
                        <p><small class="text-muted"><i class="glyphicon glyphicon-time"></i> @m.CreateDate via Twitter</small></p>
                    </div>
                    <div class="timeline-body">
                        @Html.Raw(m.Content)
                    </div>
                </div>
            </li>
        }
    </ul>
</div>

