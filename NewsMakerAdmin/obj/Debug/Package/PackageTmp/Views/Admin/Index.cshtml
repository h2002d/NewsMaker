@model NewsMaker.Models.Post
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Layouts/Main_Layout.cshtml";
}

<script type="text/javascript">
    function Success() {
        alert('Post Uploaded Successfully');
    }
</script>

@using (Ajax.BeginForm("SavePost", "Admin", new AjaxOptions()
    {
        HttpMethod = "POST",
        OnSuccess = "Success"
    }))
{
    <h1>Content</h1>
    @Html.TextAreaFor(x => x.Content);
    <p>UserId</p>
    @Html.TextBoxFor(x => x.UserId)
    <br />
    <input type="submit" value="Save Post." />
}
